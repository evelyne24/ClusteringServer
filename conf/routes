# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the location list
GET     /                           controllers.Application.index()

# Locations list (look at the default values for pagination parameters)
GET     /locations                  controllers.Application.getLocations(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")

# Generate locations in the database with random latitude, longitude within bounds
# http://localhost:9000/locations/create?sw=51.49217889772613,-0.3860662609863539&ne=51.58144308238268,0.07295626098630237
GET     /locations/create           controllers.Application.createLocations(sw:models.LatLng, ne:models.LatLng, count:Int ?= 10000)

# Fetches all locations around the provided lat lng and zoom level
GET     /clusters                   controllers.Application.getClusters(sw:models.LatLng, ne:models.LatLng, zoom:Int)

# Show Google Maps
GET     /map                        controllers.Application.map()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
